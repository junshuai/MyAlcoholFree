<div class="container">
  <p id="notice"><%= notice %></p>

  <ul>
    <% @cart.line_items.each do |line_item| %>
      <li><%= line_item.quantity %> &times; <%= line_item.product.title %></li>
    <% end %>
  </ul>
  <%= button_to 'Empty cart', @cart, method: :delete,
                data: { confirm: 'Are you sure?' } %>
</div>
