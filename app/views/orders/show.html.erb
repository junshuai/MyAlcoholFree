<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <p id="notice"><%= notice %></p>

    <h3>Your Order</h3>
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <td class="text-left">Title</td>
        <td class="text-center">Quantity</td>
        <td class="text-right">Price</td>
      </thead>
      <% @order.line_items.each do |line_item| %>
        <tr>
          <td class="text-left"><%= line_item.product.title %></td>
          <td class="text-center"><%= line_item.quantity %></td>
          <td class="text-right"><%= number_to_currency line_item.total_price, unit: '£' %></td>
        </tr>
      <% end %>
      <tr class="total_line">
        <td colspan="2">Total</td>
        <td class="total_cell text-right">
          <%= number_to_currency @order.total_price, unit: '£' %>
        </td>
      </tr>
    </table>

    <h3>Contact</h3>
    <dl class="dl-horizontal">
      <dt>Name:</dt>
      <dd><%= @order.name %></dd>
      <dt>Address:</dt>
      <dd><%= @order.address %></dd>
      <dt>Email:</dt>
      <dd><%= @order.email %></dd>
      <dt>Pay type:</dt>
      <dd><%= @order.pay_type %></dd>
    </dl>
  </div>
</div>
